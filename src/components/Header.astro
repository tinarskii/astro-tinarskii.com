---
const links = [
  {
    name: "Home",
    path: "/",
  },
  {
    name: "Articles",
    path: "/articles",
  },
  {
    name: "Lives",
    path: "/lives",
  },
];
---

<div class="navbar p-4">
    <div class="navbar-start">
        <div class="dropdown">
            <label tabindex="0" class="btn-ghost btn-circle btn">
                <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="h-6 w-6"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="#f28c18"
                >
                    <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h7"
                    />
                </svg>
            </label>
            <ul
                    tabindex="0"
                    class="z-[9999999999] dropdown-content menu menu-compact mt-3 w-52 gap-2 rounded-lg border-2 border-primary bg-white p-2 shadow shadow-lg"
            >
              {links.map(link => (
                      <a
                              class="btn-outline btn-primary btn border-none font-bold"
                              href={link.path}
                      >
                          {link.name}
                      </a>
              ))}
            </ul>
        </div>
    </div>
    <div class="md:navbar-end">
        <img
                src="/wordmark.svg"
                alt="Tinarskii's Logo"
                onclick="location.href = '/'"
                class="w-[300px] cursor-pointer"
        />
    </div>
</div>
